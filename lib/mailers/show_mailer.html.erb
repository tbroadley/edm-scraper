<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Venue</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% shows.each do |show| %>
      <tr>
        <td><%= show.name.truncate %></td>
        <td><%= show.venue %></td>
        <td>
          <%= format_date(show.start_date) %>
          <%= show.start_date == show.end_date ? "" : " &ndash; #{format_date(show.end_date)}" %>
        </td>
        <td>
          <% if show.url %>
            <a href="<%= show.url %>">Tickets</a>
          <% end %>
        </td>
        <td>
          <a href="<%= google_calendar_event_link(show) %>">Add to calendar</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
