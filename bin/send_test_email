#!/usr/bin/env ruby

require 'postageapp'

require_relative '../environment'

request = PostageApp::Request.new(
  :send_message,
  {
    headers: {
      from: 'edm-scraper-dev@tbroadley.com',
      subject: 'Test subject',
    },
    recipients: 'buriedunderbooks@hotmail.com',
    content: {
      'text/plain': 'Test body'
    },
  }
)

request.send
